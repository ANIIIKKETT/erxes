# From inside a container, host's IP address is 172.17.0.1

CORE_MONGO_URL: mongodb://172.17.0.1:27017/erxes

# Redis
REDIS_HOST: 172.17.0.1
REDIS_PORT: 6379
REDIS_PASSWORD: "123"

# RabbitMQ
RABBITMQ_HOST: amqp://172.17.0.1

# ELASTICSEARCH
ELASTICSEARCH_URL: http://172.17.0.1:9200

USE_BRAND_RESTRICTIONS:

MAIN_APP_DOMAIN: http://localhost:3000
WIDGETS_DOMAIN: ""
CLIENT_PORTAL_DOMAINS: ""
DASHBOARD_DOMAIN: ""

ELK_SYNCER: "false"

CORE_URL:

gateway: {}
core: {}

# plugin's directory name must be ./packages/plugin-${name}-api
# plugin's package.json.name must be @erxes/plugin-${name}-api
plugins:
  contacts:
    environment:
      MONGO_URL: mongodb://172.17.0.1:27017/erxes-contacts
  tags:
    environment:
      MONGO_URL: mongodb://172.17.0.1:27017/erxes-tags
  inbox:
    environment:
      MONGO_URL: mongodb://172.17.0.1:27017/erxes-inbox
  cards:
    environment:
      MONGO_URL: mongodb://172.17.0.1:27017/erxes-cards
      USE_IMPORT: "true"